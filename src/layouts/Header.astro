---
import { SITE_TITLE } from '@/consts';
import Heading from '@/components/Heading.astro';

type Props = {
  isHome: boolean;
};

const { isHome = true } = Astro.props;

const Tag = isHome ? 'h1' : 'p';
---

<header class="header">
  <Heading text={SITE_TITLE} tag={Tag} level={1} url="/" bold={false} data-heading />
</header>

<script>
  function focusHeader() {
    const headingLink = document.querySelector('[data-heading] a') as HTMLAnchorElement | null;
    headingLink?.focus();
  }

  const setup = () => {
    (window as any).swup.hooks.on('visit:end', (visit: any) => {
      if (visit.to.url === '/') {
        focusHeader();
        console.log('focusHeader');
      }
    });
  };
  if ((window as any).swup) {
    setup();
  } else {
    document.addEventListener('swup:enable', setup);
  }
</script>

<style lang="scss">
  @use '@/styles/variables' as var;
  @use '@/styles/extension' as *;
</style>

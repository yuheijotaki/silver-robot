  //   syntax: '<color>',
  //   inherits: true,
  //   initialValue: 'aqua',
  // });
</script>

<style>
  /* stylelint-disable custom-property-pattern */
  .wrapper {
    margin: 2rem;
  }

  h2 {
    margin-top: 5rem;
  }

  .section {
    width: 32rem;
    height: 32rem;
  }

  /********************
  * 1. initial-value
  ********************/

  @property --initial {
    syntax: '<color>';
    inherits: true;
    initial-value: tomato;
  }

  .initial-value {
    --initial: 9999;

    background-color: var(--initial);
  }

  /********************
  * 2. override
  ********************/
  @property --override {
    syntax: '<color>';
    inherits: true;
    initial-value: tomato;
  }

  .override {
    --override: blue;

    background-color: var(--override);
  }

  /********************
  * 3. inherits
  ********************/
  @property --inherits {
    syntax: '<color>';
    inherits: false;
    initial-value: tomato;
  }

  .inherits {
    --inherits: blue;

    display: grid;
    place-content: center;
    background-color: var(--inherits);
  }

  .inherits .child {
    width: 8rem;
    height: 8rem;
    background-color: var(--inherits);
    border: 10px solid black;
  }

  /********************
  * 4. animation angle
  ********************/

  @property --angle {
    syntax: '<angle>';
    inherits: true;
    initial-value: 0deg;
  }

  .angle {
    --angle: 0deg;

    background: linear-gradient(var(--angle), lime, pink);
    animation: animate-angle 2s infinite;
  }

  @keyframes animate-angle {
    0% {
      --angle: 0deg;
    }

    100% {
      --angle: 360deg;
    }
  }

  /********************
  * 5. animation gradient
  ********************/

  @property --gradient-color-01 {
    syntax: '<color>';
    inherits: false;
    initial-value: white;
  }

  @property --gradient-color-02 {
    syntax: '<color>';
    inherits: false;
    initial-value: black;
  }

  .gradient {
    --gradient-color-01: white;
    --gradient-color-02: black;

    background: linear-gradient(to right, var(--gradient-color-01), var(--gradient-color-02));
    animation: animate-gradient 2s infinite alternate;
  }

  @keyframes animate-gradient {
    to {
      --gradient-color-01: lime;
      --gradient-color-02: pink;
    }
  }
</style>

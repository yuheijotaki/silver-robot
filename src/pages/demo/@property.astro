---
import LayoutDemo from '@/layouts/LayoutDemo.astro';
---

<LayoutDemo title="@property">
  <div class="wrapper">
    <h1><a href="/demo/" data-no-swup>demo</a> &raquo; @property</h1>

    <h2>1. initial-value:</h2>
    <div class="section initial-value"></div>

    <h2>2. override:</h2>
    <div class="section override"></div>

    <h2>3. inherits:</h2>
    <div class="section inherits">
      <div class="child"></div>
    </div>

    <h2>4. animation angle:</h2>
    <div class="section angle"></div>

    <h2>5. animation gradient:</h2>
    <div class="section gradient"></div>
  </div>
</LayoutDemo>

<script>
